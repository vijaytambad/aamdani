       style.
      /* Simple sidebar styling */
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      .wrapper {
        display: flex;
        flex: 1 0 auto;
      }
      /* Desktop: fixed left sidebar */
      @media (min-width: 992px) {
        .sidebar {
          min-width: 220px;
          max-width: 220px;
          height: 100vh;
          position: sticky;
          top: 0;
        }
        .content {
          flex: 1;
          padding: 1.25rem;
        }
      }
      /* Mobile: make sidebar collapsed off-canvas like */
      @media (max-width: 991.98px) {
        .sidebar {
          display: block;
          width: 100%;
        }
      }

